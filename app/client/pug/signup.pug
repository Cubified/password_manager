doctype html
html
	head
		title Signup
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' href='https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css')
		link(rel='stylesheet' href='/css/bulma.css')
	body
		section(class='hero is-fullheight')
			div(class='hero-body')
				div(class='container')
					form(action='/signup' method='POST')
						h1(class='title') Sign Up
						div(class='field')
							label(class='label') Username
							div(class='control has-icons-left')
								input(class='input' type='text' placeholder='Username' name='username')
								span(class='icon is-small is-left')
									i(class='fa fa-user')
							p(id='username-error' class='help is-danger')
						div(class='field')
							label(class='label') Password
							div(class='control has-icons-left')
								input(class='input' type='password' placeholder='Password' name='password')
								span(class='icon is-small is-left')
									i(class='fa fa-lock')
							p(id='password-error' class='help is-danger')
						div(class='field')
							label(class='label') Confirm Password
							div(class='control has-icons-left')
								input(class='input' type='password' placeholder='Confirm Password' name='confirm_password')
								span(class='icon is-small is-left')
									i(class='fa fa-lock')
							p(id='confirm_password-error' class='help is-danger')
						button(type='submit' class='button is-info is-outlined') Submit
						br
						br
						a(href='/login') Already have an account?  Log in.
		script(src='/js/signup.min.js')
